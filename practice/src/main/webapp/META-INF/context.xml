<Resource
        name="jdbc/water"
        factory="com.alibaba.druid.pool.DruidDataSourceFactory"
        auth="Container"
        type="javax.sql.DataSource"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/water"
        username="root"
        password="root"
        maxActive="50"
        maxWait="10000"
        removeabandoned="true"
        removeabandonedtimeout="60"
        logabandoned="false"
        filters="stat"
/>
</Context>